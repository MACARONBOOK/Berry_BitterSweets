<div class="container mt-5">
  <div class="row">

    <div class="h4 col-2 p-3 bg-light text-center">商品一覧</div>
    <div class="col-1 ml-auto d-flex align-items-center">
    <%= link_to "＋", new_admin_item_path, class: "btn btn-success" %>
    </div>
  </div>

  <div class="row">
      <table class='table'>
        <thead class="table-active">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th></th>
            <th>販売ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price.to_s(:delimited) %>円</td>
            <td><%= item.genre.name %></td>
            <td></td>
            <td><% if item.sales_status == "sale" %>
                  <h5 class="text-success font-weight-bold">
                    販売中
                  </h5>
                <% else %>
                  <h5 class="font-weight-bold"style="color: lightgray">
                    売切れ
                  </h5>
                <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>

  <div class="offset-5">
    <%= paginate @items %>
  </div>

</div>