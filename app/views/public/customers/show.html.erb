<div class="container">
  <div class='row'>
    <div class="col-md-10 px-5 px-sm-0 mx-auto mt-4">

  <h1>顧客のマイページ</h1>

  <div class="row mt-5">
    <div class="col-md-2 h4">
      <strong>登録情報</strong>
    </div>
    <div class="col-md-2">
      <%= link_to "編集する", edit_customers_path(current_customer), class: 'btn btn-success mb-3' %>
    </div>
  </div>

   <table class="table table-bordered">
  <tbody>
    <tr>
      <td class="table-active">氏名</td>
      <td><%= @customer.last_name %>&nbsp;<%= @customer.first_name %></td>
    </tr>
    <tr>
      <td class="table-active">カナ</td>
      <td><%= @customer.last_name_kana %>&nbsp;<%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <td class="table-active">郵便番号</td>
      <td><%= @customer.post_code %></td>
    </tr>
    <tr>
      <td class="table-active">住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td class="table-active">電話番号</td>
      <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
      <td class="table-active">メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>


  <div class="row mt-5">
    <div class="col-md-2 h4">
      <strong>配送先</strong>
    </div>
    <div class="col-md-2">
      <%= link_to "一覧を見る", shipping_addresses_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-2 h4">
      <strong>注文履歴</strong>
    </div>
    <div class="col-md-2">
     <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary' %>
    </div>
    </div>
    </div>
  </div>
